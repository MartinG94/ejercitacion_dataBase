<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body class="container-fluid">
    <form method="POST" action="?_method=PUT">
        <label for="first_name">Nombre </label>
        <input type="text" name="first_name" id="" value="<%= actor.first_name %>"> <br>

        <label for="last_name">Apellido </label>
        <input type="text" name="last_name" id="" value="<%= actor.last_name %>"> <br>

        <label for="rating">Rating </label>
        <input type="number" name="rating" id="" value="<%= actor.rating %>"> <br>

        <label for="favorite_movie_id">Pelicula Favorita </label>
        <input type="number" name="favorite_movie_id" id="" value="<%= actor.favorite_movie_id %>">

        <input type="submit" value="Actualizar">
    </form>
    <a href="/actors/detail/<%= actor.id %>">Volver</a>
    <%- include('./partials/scriptsBootstrap') %>
</body>
</html>